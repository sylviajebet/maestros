{
  "name": "tailwind-project",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --minify",
    "copy:static": "cp public/index.html dist/index.html && cp -r public/images dist/images",
    "watch:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch",
    "watch:static": "chokidar public/index.html public/images/* -c 'cp public/index.html dist/index.html && cp -r public/images dist/images'",
    "dev": "npm-run-all --parallel watch:css watch:static"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "cssnano": "^7.0.6",
    "nodemon": "^3.1.10",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "npm-run-all": "^4.1.5"
  }
}
